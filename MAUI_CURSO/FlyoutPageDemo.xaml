<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_CURSO.FlyoutPageDemo">

    <FlyoutPage.Flyout>
        <ContentPage Title="Menú">
            <StackLayout>
                <Label Text="Opcion 1"/>
                <Label Text="Opcion 2"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Página Principal">
                    <StackLayout>
                        <Label Text="Contenido Principal"
               FontSize="24"
               HorizontalOptions="Center"/>
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
